{
  "$schema": "https://json-schema.org/draft-07/schema",
  "name": "fetch",
  "description": "HTTP fetch capabilities for making web requests",
  "config": {
    "mcpServers": {
      "fetch": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-fetch"]
      }
    }
  },
  "setup": {
    "steps": [
      "1. No additional configuration required",
      "2. Add the config to your Claude settings file",
      "3. Optionally configure allowed domains for security"
    ],
    "optionalConfig": {
      "allowedDomains": ["api.example.com", "*.trusted-domain.com"],
      "timeout": 30000,
      "maxResponseSize": "10MB"
    }
  },
  "tools": [
    "fetch",
    "fetch_json",
    "fetch_html"
  ],
  "useCases": [
    "Fetching API documentation",
    "Testing API endpoints",
    "Retrieving remote configuration",
    "Checking service health"
  ],
  "notes": "Be cautious about fetching untrusted URLs. Consider restricting to known domains."
}
